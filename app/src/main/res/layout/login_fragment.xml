<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/main_logo"
            android:gravity="center"
            android:layout_marginTop="56dp"
            android:layout_height="150dp"
            android:layout_width="match_parent">

            <ImageView
                android:background="@drawable/logo"
                android:layout_width="266dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:id="@+id/second_logo"
                android:fontFamily="?attr/main_font"
                android:textSize="48sp"
                android:textColor="@color/colorPrimaryWhite"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/login_block"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/block_background"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email"
                    android:focusableInTouchMode="true"
                    android:drawablePadding="8dp"
                    android:fontFamily="?attr/main_font"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawableStart="@drawable/ic_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:hint="@string/email_hint" />

                <EditText
                    android:id="@+id/pass"
                    android:focusableInTouchMode="true"
                    android:drawablePadding="8dp"
                    android:fontFamily="?attr/main_font"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawableStart="@drawable/ic_password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:hint="@string/pass_hint" />

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/login"
                        android:drawableRight="@drawable/ic_login"
                        android:drawableEnd="@drawable/ic_login"
                        android:fontFamily="?attr/main_font"
                        android:drawablePadding="-32dp"
                        android:layout_width="200dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:background="?attr/main_button_background"
                        android:text="@string/login"
                        android:textColor="@color/colorPrimaryWhite" />

                    <Button
                        android:id="@+id/registration"
                        android:layout_marginTop="8dp"
                        android:fontFamily="?attr/main_font"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/registration_label"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="?attr/transparent_button" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>