<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/login_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:padding="8dp"
            android:text="@string/login"
            android:gravity="start"
            android:textAllCaps="false"
            android:textAlignment="viewStart"
            android:fontFamily="?attr/main_font"
            android:background="?attr/transparent_button"
            android:textColor="@color/colorPrimaryWhite"/>

        <LinearLayout
            android:id="@+id/active_part"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:drawableLeft="@drawable/ic_mail_address"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_mail_address"
                        android:focusableInTouchMode="true"
                        android:fontFamily="?attr/main_font"
                        android:hint="@string/email_hint"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textColorHint="@color/colorHintWhite" />

                    <EditText
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_pass"
                        android:focusableInTouchMode="true"
                        android:fontFamily="?attr/main_font"
                        android:hint="@string/pass_hint"
                        android:inputType="textPassword"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textColorHint="@color/colorHintWhite" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/login"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="?attr/main_button_background"
                    android:drawableEnd="@drawable/ic_forward_button"
                    android:drawablePadding="-32dp"
                    android:drawableRight="@drawable/ic_forward_button"
                    android:fontFamily="?attr/main_font"
                    android:text="@string/login"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryWhite" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>