<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sing_up_block"
    android:layout_weight="0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/sing_up_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="8dp"
            android:gravity="start"
            android:textAllCaps="false"
            android:textAlignment="viewStart"
            android:text="@string/registration_label"
            android:fontFamily="?attr/main_font"
            android:background="?attr/transparent_button"
            android:textColor="@color/colorPrimaryWhite"/>

        <RelativeLayout
            android:id="@+id/active_part"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="?attr/main_block_background"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:drawableLeft="@drawable/ic_mail_address"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_mail_address"
                        android:focusableInTouchMode="true"
                        android:fontFamily="?attr/main_font"
                        android:hint="@string/email_hint"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textColorHint="@color/colorHintWhite" />

                    <EditText
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_pass"
                        android:focusableInTouchMode="true"
                        android:fontFamily="?attr/main_font"
                        android:hint="@string/pass_hint"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textColorHint="@color/colorHintWhite" />

                    <EditText
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_pass"
                        android:focusableInTouchMode="true"
                        android:fontFamily="?attr/main_font"
                        android:hint="@string/first_name_hint"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textColorHint="@color/colorHintWhite" />

                    <EditText
                        android:id="@+id/middle_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_pass"
                        android:focusableInTouchMode="true"
                        android:fontFamily="?attr/main_font"
                        android:hint="@string/middle_name_hint"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textColorHint="@color/colorHintWhite" />

                    <EditText
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_pass"
                        android:focusableInTouchMode="true"
                        android:fontFamily="?attr/main_font"
                        android:hint="@string/last_name_hint"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textColorHint="@color/colorHintWhite" />

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_pass"
                        android:focusableInTouchMode="true"
                        android:fontFamily="?attr/main_font"
                        android:hint="@string/age_hint"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textColorHint="@color/colorHintWhite" />

                    <EditText
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_pass"
                        android:focusableInTouchMode="true"
                        android:fontFamily="?attr/main_font"
                        android:hint="@string/weight_hint"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textColorHint="@color/colorHintWhite" />

                    <Spinner
                        android:id="@+id/sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/main_input_background"
                        android:popupBackground="?attr/main_block_background">

                    </Spinner>

                    <Spinner
                        android:id="@+id/diabetes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/main_input_background"
                        android:popupBackground="?attr/main_block_background">

                    </Spinner>

                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="?attr/main_semi_transparent_block"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="8dp">

                <Button
                    android:id="@+id/sing_up_ready"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="?attr/main_button_background"
                    android:drawableEnd="@drawable/ic_forward_button"
                    android:drawablePadding="-32dp"
                    android:drawableRight="@drawable/ic_forward_button"
                    android:fontFamily="?attr/main_font"
                    android:text="@string/next"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryWhite" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>